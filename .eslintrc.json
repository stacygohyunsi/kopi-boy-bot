{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
				"mocha": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "error",
        "no-unreachable": "error",
        "no-unused-vars": "error",
				"no-trailing-spaces": "error",
				"object-curly-spacing": ["error", "always"],
        "valid-typeof": "warn"
    }
}